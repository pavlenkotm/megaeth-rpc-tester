# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{py,vy}]
indent_style = space
indent_size = 4

[*.{sol,move}]
indent_style = space
indent_size = 4

[*.{go,rs}]
indent_style = tab
tab_width = 4

[*.{cpp,c,h}]
indent_style = space
indent_size = 2

[*.{hs,cabal}]
indent_style = space
indent_size = 2

[*.{rb}]
indent_style = space
indent_size = 2

[*.{java}]
indent_style = space
indent_size = 4

[*.{sh}]
indent_style = space
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
